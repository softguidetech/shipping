        <record id="request_inbound_form" model="ir.ui.view">
            <field name="name">request.inbound.form</field>
            <field name="model">request.inbound</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="confirm_manager" string="To Direct Manager" type="object"
                                class="oe_highlight" states="draft" groups="base.group_user"/>
                        <button name="reject" string="draft" type="object"
                                class="oe_highlight" states="done" groups="base.group_user"/>
                        <button name="confirm_cashier" string="To Auditor" type="object"
                                class="oe_highlight" states="manager" groups="finance_vouchers.group_cash_voucher_cs"/>
                        <button name="unlink" string="Cancel" type="object"
                                states="post" groups="finance_vouchers.group_cash_voucher_cs"/>
                        <button name="confirm_audit" string="To final Approval" type="object"
                                class="oe_highlight" states="audit" groups="finance_vouchers.group_cash_voucher_cs"/>
                        <button name="confirm_post" string="Confirm" type="object"
                                class="oe_highlight" states="done" groups="finance_vouchers.group_cash_voucher_mg"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,manager,audit,done,post,cancel"/>
                    </header>
                    <!--                    <header>-->
                    <!--                        <button name="confirm_manager" string="To Accountant" type="object"-->
                    <!--                                class="oe_highlight" states="draft" groups="base.group_user"/>-->
                    <!--                        &lt;!&ndash;                        <button name="confirm_post" string="ترحيل" type="object"&ndash;&gt;-->
                    <!--                        &lt;!&ndash;                                class="oe_highlight" states="draft" groups="finance_vouchers.group_request_inbound_mg"/>&ndash;&gt;-->
                    <!--                        <button name="confirm_post" string="Confirm" type="object"-->
                    <!--                                class="oe_highlight" states="accountant" groups="account.group_account_manager"/>-->
                    <!--                        <button name="unlink" string="Cancel" type="object"-->
                    <!--                                states="post" groups="account.group_account_manager"/>-->
                    <!--                        <field name="state" widget="statusbar" statusbar_visible="draft,accountant,post,cancel"/>-->
                    <!--                    </header>-->

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_move" class="oe_stat_button"
                                    icon="fa-bars" groups="account.group_account_manager">
                                <field name="count_je" widget="statinfo" string="Expense Entry"/>
                            </button>
                        </div>

                        <group colspan="4">
                            <div class="oe_title">
                                <h2>
                                    <field name="name"/>
                                </h2>
                            </div>
                        </group>

                        <group col="4" string="Details">
                            <field name="user_name"/>
                            <field name="request_date" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                            <field name="amount" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                            <field name="num2wo" readonly="1"/>
                            <field name="currency_id"  attrs="{'readonly': [('state','not in',['draft'])]}"/>
                            <field name="currency_rate"  />
                            <field name="company_id" readonly="1"/>
                            <field name="is_receiving_from_related_party"
                                   attrs="{'invisible': [('is_transfer', '=', True)]}"/>
                            <field name="is_transfer"
                                   attrs="{'invisible': [('is_receiving_from_related_party', '=', True)]}"/>
                        </group>

                        <notebook>
                            <page string="Expenses Line">
                                <field name="custody_line_ids">
                                    <tree editable="bottom">
                                        <field name="state" invisible="1"/>
                                        <field name="is_transfer" invisible="1"/>
                                        <field name="is_receiving_from_related_party" invisible="1"/>
                                        <field name="is_required_analytic" invisible="1"/>
                                        <field name="partner_id"
                                               attrs="{'readonly':[('is_transfer', '=', True)],'required': [('is_receiving_from_related_party', '=', True)]}"/>
                                        <field name="account_id" onchange="_get_partner"
                                               attrs="{'required': ['|',('is_receiving_from_related_party', '=', True),('is_transfer', '=', True)]}"/>
                                        <!--                                        <field name="partner_id"/>-->
                                        <field name="analytic_accont_id"
                                               attrs="{'required': [('is_required_analytic', '=', True)]}"/>
                                        <field name="name"/>
                                        <field name="currency_id" readonly="1" />

                                        <field name="doc_attachment_id" widget="many2many_binary"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>

                                <group class="oe_subtotal_footer oe_right">
                                    <field name="total_with_ex"/>
                                    <field name="total" class="oe_subtotal_footer_separator"/>
                                </group>
                            </page>

                            <page string="Accounting Details">
                                <group col="4" colspan="4">
                                    <field name="cash_journal_id" options="{'no_create': True}"/>
                                    <field name="account_id" options="{'no_create': True}"/>
                                    <field name="move_id" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="sequence_request_inbound" model="ir.sequence">
            <field name="name">request inbound sequence</field>
            <field name="code">request.inbound.code</field>
            <field name="prefix">/%(range_year)s/</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field eval="True" name="use_date_range"/>
            <field eval="False" name="company_id"/>
            <field name="padding">4</field>
        </record>

        <record id="request_inbound_ac" model="ir.actions.act_window">
            <field name="name">All Vouchers</field>
            <field name="res_model">request.inbound</field>
            <!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_my_request': 1}</field>
        </record>


        <record id="request_inbound_post" model="ir.actions.act_window">
            <field name="name">Vouchers Posted</field>
            <field name="res_model">request.inbound</field>
            <!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('state', '=', 'post')]</field>
            <field name="context">{'search_default_my_request': 1}</field>

        </record>


        <record model="ir.ui.view" id="request_inbound_reconcile_kanban_view">
            <field name="name">request inbound Kanban</field>
            <field name="model">request.inbound</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" create="true">
                    <field name="name"/>
                    <field name="user_name"/>
                    <field name="request_date"/>
                    <field name="amount"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <strong class="o_kanban_record_subtitle">
                                            <field name="user_name"/>
                                        </strong>
                                        <strong class="o_kanban_record_subtitle">
                                            <field name="amount"/>
                                        </strong>
                                    </div>
                                </div>
                                <strong style="color:blue;">
                                    <field name="request_date"/>
                                </strong>
                                <br></br>
                                <strong style="color:green;">State /
                                    <field name="state"/>
                                </strong>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <menuitem id="inbound_vouchers_root_ch1_ch1" name="Cash In" parent="cash_vouchers_ch1"
                  sequence="1" action="request_inbound_ac"/>

    </data>
</odoo>
