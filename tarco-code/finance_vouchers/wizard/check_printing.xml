<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="check_printing_report_view" model="ir.ui.view">
        <field name="name">Checks Report</field>
        <field name="model">finance.print.check.wizard</field>
        <field name="arch" type="xml">
        	<form>


        		<group col="4">
					<field name="date" />
        			<field name="Account_Holder_Name" />
        			<field name="amount" />
					<field name="Amount_in_word" />
        		</group>
        		<footer>
	                <button name="get_report" string="Print" type="object" default_focus="1" class="oe_highlight" />
	                or
	                <button string="Cancel" class="oe_link" special="cancel" />
	            </footer>
			</form>
        </field>
    </record>

	<record id="action_salesperson_wizard" model="ir.actions.act_window">
        <field name="name">Generate Salesperson Report</field>
        <field name="res_model">finance.print.check.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <!--<field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="view_id" ref="check_printing_report_view"/>
        <field name="target">new</field>
    </record>

</odoo>