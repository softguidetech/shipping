<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="car_ticket_report_template">
         <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <!-- <t t-set="lang" t-value="o.partner_id.lang"/> -->
                <t t-call="car_ticket.car_ticket_layout">
                    <div class="page" style="font-family: 'Arial', sans-serif; font-size: 12px;">

                        <table class="table o_main_table table-bordered h5 text-center" name="invoice_line_table">
                            <thead class="bg-light">
                                <tr>
                                    <th name="th_dep_date"><span>Dep. Date</span></th>
                                    <th name="th_ticket_type"><span>Ticket Type</span></th>
                                    <th name="th_ticket_no"><span>Ticket No.</span></th>
                                    <th name="th_booking_no"><span>Booking No.</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span t-field="doc.date"/></td>
                                    <td><span t-field="doc.ticket_type"/></td>
                                    <td><span t-field="doc.ticket_no"/></td>
                                    <td><span t-field="doc.ticket_no"/></td>
                                </tr>

                                <tr>
                                    <td colspan="3">
                                        <span> <span t-field="doc.consignee_name_english"</span>
                                    </td>
                                    <td><span>المستلم</span></td>
                                </tr>

                                <tr>
                                    <td><span>الشاحن</span></td>
                                    <td class="bg-light"><span t-field="doc.shipper_name_english"></span></td>
                                    <td><span>الوكاله</span></td>
                                    <td><span>Oh my.</span></td>
                                </tr>

                                <tr>
                                    <td><span>التصنيف</span></td>
                                    <td class="bg-light"><span>Oooooom</span></td>
                                    <td><span>قيمه التزكره</span></td>
                                    <td><span t-field="doc.price"></span></td>
                                </tr>
                            </tbody>
                        </table>

                        <table class="table o_main_table table-bordered h5 text-center" name="invoice_line_table">
                            <thead class="bg-light">
                                <tr>
                                    <th name="th_dep_date_throw"><span>بيانات السياره</span></th>
                                </tr>
                            </thead>
                        </table>

                        <div class="row">
                            <div class="col-3"/>
                            <div class="col-6">
                                <table class="table table-bordered h5 text-center">
                                    <tr>
                                        <td>رقم الشاسي</td>
                                        <td class="bg-light"><span t-field="doc.chassis_number"></span></td>
                                    </tr>
                                    <tr>
                                        <td>الموديل</td>
                                        <td class="bg-light"><span t-field="doc.model_in_english"></span></td>
                                    </tr>
                                    <tr>
                                        <td>سنه الصنع</td>
                                        <td class="bg-light"><span t-field="doc.manufacturing_year"></span></td>
                                    </tr>
                                    <tr>
                                        <td>رقم اللوحه</td>
                                        <td class="bg-light"><span t-field="doc.plate_number"></span></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-3"/>
                        </div>

                        <div class="row pt-2">
                            <table class="table o_main_table table-bordered h5 text-center" name="invoice_line_table">
                                <thead>
                                    <tr>
                                        <th width="75%" name="th_dep_date_throw"><span>Tملاحظات</span></th>
                                        <th class="bg-light" name="th_dep_date_throw"><span t-field="doc.note"></span></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                        <div style="margin-top: 20px;">
                            <h3>تعليمات التزاكر وشروط السفر</h3>
                            <p><span t-field="doc.term"></span></p>
                        </div>
                    </div>
                </t>
            </t>
        </t>

    </template>
</odoo>
